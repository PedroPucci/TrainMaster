@model TrainMaster.Domain.Dto.ForgotPasswordDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Recuperar Senha";
    Layout = null;
    var novaSenha = ViewBag.NovaSenha as string;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - TrainMaster</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/forgotPassword.css" />
</head>
<body>
    <div class="container">
        <div class="left">
            <h2>Recuperar Senha</h2>
            <p class="p">Informe seu e-mail cadastrado.</p>
            <form asp-action="SendRecovery" asp-controller="Login" method="post">
                <div class="input-group">
                    <input asp-for="Email" placeholder="Digite seu e-mail" />
                    <i class="fas fa-envelope"></i>
                    <span asp-validation-for="Email" class="validation-message"></span>
                </div>
                <div class="input-group">
                    <input type="text" readonly placeholder="Nova senha gerada" value="@(novaSenha ?? "")" />
                    <i class="fas fa-lock"></i>
                </div>
                <button type="submit">Enviar</button>
            </form>

        </div>
        <div class="right">
            <h3>Lembrou sua senha?</h3>
            <p>Volte à tela de login e tente novamente.</p>
            <a href="/Login">Voltar</a>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>