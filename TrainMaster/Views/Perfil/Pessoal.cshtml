@model TrainMaster.Domain.Entity.PessoalProfileEntity
@{
    ViewData["Title"] = "Editar Perfil Pessoal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="project-description">
    <h2 style="color: #20b2aa; margin-bottom: 20px;">Editar Perfil Pessoal</h2>

    @if (ViewBag.Sucesso != null)
    {
        <div style="color: green; font-weight: bold; margin-bottom: 15px;">@ViewBag.Sucesso</div>
    }

    <div style="background-color: white; padding: 30px; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.1); max-width: 600px; margin: 0 auto;">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group" style="margin-bottom: 15px;">
                <label>Nome</label>
                <input asp-for="Name" class="form-control" style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-bottom: 15px;">
                <label>Data de Nascimento</label>
                <input asp-for="BirthDate" type="date" class="form-control" style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-bottom: 15px;">
                <label>Estado Civil</label>
                <select asp-for="MaritalStatus" class="form-control" style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;">
                    <option value="">Selecione</option>
                    <option value="Solteiro">Solteiro</option>
                    <option value="Casado">Casado</option>
                    <option value="Separado">Separado</option>
                </select>
                <span asp-validation-for="MaritalStatus" class="text-danger"></span>
            </div>

            <div class="form-group text-end">
                <button type="submit" class="btn" style="background-color: #20b2aa; color: white; padding: 10px 20px; border-radius: 20px; font-weight: bold;">Salvar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}