@model TrainMaster.Domain.Entity.ProfessionalProfileEntity

@{
    ViewData["Title"] = "Editar Perfil Profissional";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="project-description">
    <h2 style="color: #20b2aa; margin-bottom: 20px;">Editar Perfil Profissional</h2>

    @if (ViewBag.Sucesso != null)
    {
        <div class="alert alert-success" style="color: green; font-weight: bold;">
            @ViewBag.Sucesso
        </div>
    }

    <div style="background-color: white; padding: 30px; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.1); max-width: 600px; margin: 0 auto;">
        @* <form asp-action="Profissional" asp-route-id="@Model.UserId" method="post"> *@
        <form asp-action="Edit" asp-route-id="@Model.UserId" method="post">
            @* <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" value="2" /> *@

            <div class="form-group" style="margin-bottom: 15px;">
                <label>Cargo</label>
                <input name="JobTitle" value="@Model.JobTitle" class="form-control"
                       style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;" />
                <span asp-validation-for="JobTitle" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-bottom: 15px;">
                <label>Anos de Experiência</label>
                <input name="YearsOfExperience" type="number" min="0" value="@Model.YearsOfExperience" class="form-control"
                       style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;" />
                <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-bottom: 15px;">
                <label>Habilidades</label>
                <textarea name="Skills" class="form-control"
                          style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;">@Model.Skills</textarea>
                <span asp-validation-for="Skills" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-bottom: 15px;">
                <label>Certificações</label>
                <textarea name="Certifications" class="form-control"
                          style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;">@Model.Certifications</textarea>
                <span asp-validation-for="Certifications" class="text-danger"></span>
            </div>
            <div class="button-group">
                <button type="submit" class="btn"
                        style="background-color: #20b2aa; color: white; padding: 10px 20px; border-radius: 20px; font-weight: bold;">
                    Salvar
                </button>

                <a href="/Home/Index"
                   class="btn"
                   style="background-color: #ccc; color: #333; padding: 10px 20px; border-radius: 20px; font-weight: bold; text-decoration: none;">
                    Cancelar
                </a>

                <input type="hidden" name="UserId" value="1" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}