@model TrainMaster.Domain.Entity.CourseEntity
@{
    ViewData["Title"] = "Editar Curso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="project-description">
    <h2 style="color: #20b2aa; margin-bottom: 20px;">Editar Curso</h2>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="error-message" style="color:red;">@ViewBag.ErrorMessage</div>
    }

    <div style="background-color: white; padding: 30px; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.1); max-width: 600px; margin: 0 auto;">
        <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
            @* <input type="hidden" asp-for="Id" />
            <input type="hidden" name="UserId" value="1" /> *@

            <div class="form-group" style="margin-bottom: 15px;">
                <label>Nome</label>
                <input name="Name" value="@Model.Name" class="form-control" style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;" />
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-vermelho" })
            </div>

            <div class="form-group" style="margin-bottom: 15px;">
                <label>Descrição</label>                
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = "3", style = "width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;" })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-vermelho" })
            </div>

            <div class="form-group" style="margin-bottom: 15px;">
                <label>Data de Início</label>
                <input name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" type="date" class="form-control" style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-bottom: 15px;">
                <label>Data de Fim</label>
                <input name="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" type="date" class="form-control" style="width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="button-group">
                <button type="submit" class="btn" style="background-color: #20b2aa; color: white; padding: 10px 20px; border-radius: 20px; font-weight: bold;">Salvar</button>

                <a href="/Cursos/Index"
                   class="btn"
                   style="background-color: #ccc; color: #333; padding: 10px 20px; border-radius: 20px; font-weight: bold; text-decoration: none;">
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    .text-vermelho {
        color: red;
    }
 </style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}